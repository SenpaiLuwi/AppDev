<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewRecord"
    android:background="#ED9ED6">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CHARACTER"
        android:fontFamily="@font/cunia"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <EditText
        android:id="@+id/txt_id_name"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:backgroundTint="#22092C"
        android:ems="10"
        android:fontFamily="@font/cunia"
        android:hint="@string/NAME"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#22092C"
        android:textColorHint="#22092C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/txt_id_number"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:backgroundTint="#22092C"
        android:ems="10"
        android:fontFamily="@font/cunia"
        android:hint="@string/SUBNAME"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#22092C"
        android:textColorHint="#22092C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30"
        tools:ignore="RtlSymmetry,TextFields" />

    <EditText
        android:id="@+id/txt_id_power"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:backgroundTint="#22092C"
        android:ems="10"
        android:fontFamily="@font/cunia"
        android:hint="@string/POWER"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#22092C"
        android:textColorHint="#22092C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.40"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/txt_id_imgurl"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:backgroundTint="#22092C"
        android:ems="10"
        android:fontFamily="@font/cunia"
        android:hint="@string/IMAGE"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#22092C"
        android:textColorHint="#22092C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_id_save"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#22092C"
        android:fontFamily="@font/cunia"
        android:text="@string/SAVE"
        android:textColor="#EEF5FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.60" />

    <Button
        android:id="@+id/btn_id_cancel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#22092C"
        android:fontFamily="@font/cunia"
        android:text="@string/CANCEL"
        android:textColor="#EEF5FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.70" />


</androidx.constraintlayout.widget.ConstraintLayout>